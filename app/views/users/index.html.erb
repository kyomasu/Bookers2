<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-lg-8">
      <h1>Users</h1>
      <% @users.each do |user| %>
      <table class="table table-striped">
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
         </tr>
        </thead>
        <tbody>
          <tr>
           <td class="profile_container">
             <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
           </td>
           <td class="profile-name">
             <%= @user.name %>
           </td>
           <td>
             <%= link_to "Show", user_path(current_user.id) %>
           </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>