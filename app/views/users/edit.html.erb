<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
            <%= form_with model:@user, local:true do |f| %>
            <label for="inputName">Name</label>
            <br>
              <%= f.text_field :name, autofocus: true, id:"inputName"%>
            </br>
            <label for="inputImage">Image</label>
            <br>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </br>
            <label for="inputIntroduction">Introduction</label>
            <br>
              <%= f.text_field :introduction %>
            </br>
            <br>
              <%= f.submit "Update User", class: "btn btn-secondary" %>
            </br>
            <% end %>
        </div>
    </div>
</div>
