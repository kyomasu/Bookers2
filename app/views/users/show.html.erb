<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
         <tr>
           <td class="profile_container">
             <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
           </td>
           <td><%= link_to book.title, "/books/#{book.id}" %></td>
           <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>