<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <%= render 'books/list', book: @book, user: @user %>
        </div>
        <div class="col-lg-8">
          <h2>Book detail</h2>
          <table class="table table-striped">
              <tbody>
                  <tr>
                    <td class="profile_container">
                       <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                       <br>
                         <%= link_to @user.name, "/users/#{@user.id}" %>
                       </br>
                    </td>
                    <td>
                       <%= link_to @book.title, "/books/#{@book.id}" %>
                    </td>
                    <td>
                       <%= @book.body %>
                    </td>
                    <td>
                       <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
                    </td>
                    <td>
                       <%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                    </td>
                  </tr>
              </tbody>
          </table>
        </div>
    </div>
</div>

